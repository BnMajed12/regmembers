<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/login_text_bg" >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/textView1"
        style="@style/text_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/taarifa_picha"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:visibility="gone" />

    <Button
        android:id="@+id/pichamteja"
        style="@style/button_text_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="22dp"
        android:drawableLeft="@drawable/ic_menu_camera"
        android:onClick="pichaMteja"
        android:text="@string/picha" />

   <ImageView
       android:id="@+id/mtejaview"
       android:layout_width="100dp"
       android:layout_height="100dp"
       android:layout_below="@+id/pichamteja" />

   <Button
       android:id="@+id/tumadata"
       style="@style/button_text_black"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/mtejaview"
       android:layout_centerHorizontal="true"
       android:onClick="sendPicha"
       android:text="@string/inayofuata"
       android:visibility="gone" />

      <ProgressBar
       android:id="@+id/progress"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignBottom="@+id/tumadata"
       android:layout_toRightOf="@+id/tumadata"
       android:visibility="invisible" />

</RelativeLayout>
</ScrollView>
