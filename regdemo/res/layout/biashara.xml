<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/login_text_bg" >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/textView1"
        style="@style/text_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/taarifa_biashara"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:visibility="gone" />
    
     <EditText
         android:id="@+id/biashara"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/textView1"
         android:layout_marginTop="22dp"
         android:ems="10"
         android:hint="@string/biashara"
          />

   <EditText
       android:id="@+id/kikundi"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/biashara"
       android:layout_marginTop="20dp"
       android:ems="10"
       android:hint="@string/kikundi" >

        <requestFocus />
    </EditText> 
     <Spinner
        android:id="@+id/huduma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/kikundi"
       />

    <EditText
        android:id="@+id/banki"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/huduma"
        android:ems="10"
        android:hint="@string/banki" />

    <EditText
        android:id="@+id/ombikiwango"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/banki"
        android:ems="10"
        android:hint="@string/mkopokiasi"
        android:inputType="number" />

    <EditText
        android:id="@+id/kuanziakiwango"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ombikiwango"
        android:ems="10"
        android:hint="@string/kiwangokuanzia"
        android:inputType="number" />

    <EditText
        android:id="@+id/maliposiku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kuanziakiwango"
        android:ems="10"
        android:hint="@string/malipokwasiku"
        android:inputType="number" />
    
     <Spinner
        android:id="@+id/mudamalipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/maliposiku"
       />

    <Button
        android:id="@+id/inayofuata"
        style="@style/button_text_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/mudamalipo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:text="@string/inayofuata"
        android:visibility="gone" />

</RelativeLayout>
</ScrollView>
